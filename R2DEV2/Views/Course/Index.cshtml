@model IEnumerable<R2DEV2.Models.Classes.CourseClass>

@{
    ViewBag.Title = "Kurser";
}

<style>
    h2, h4{
        margin-top: 0px;
        margin-bottom: 10px;
        color: black;
    }

    h2 > a {
        color: black;
    }

    h2 > a:hover {
        color: black;
        font-weight: bolder;
        text-decoration: none;
    }
</style>

<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home"></div>

    <div class="tab-pane fade" id="NyLärare">
        Skapa ny Lärare
        <hr class="container-fluid" />
    </div>

    <div class="tab-pane fade" id="NyElev">
        Skapa ny Elev
        <hr class="container-fluid" />
    </div>

    <div class="tab-pane fade" id="NyKurs">
        <div class="container-fluid">
            Skapa ny kurs
        </div>
        <hr class="container-fluid" />
    </div>
</div>

@foreach (var item in Model)
{
    <div class="container-fluid">
        <div class="col-md-9">
            <h2 style="display: inline-block;">
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </h2>
            <h2 class="hidden-xs" style="float:right; display: inline-block;">
                <small style="text-align:right;">
                    @Html.DisplayFor(modelItem => item.StartTime) till
                    @Html.DisplayFor(modelItem => item.EndTime)
                </small>
            </h2>
        </div>
        
        <div class="col-sm-9 col-xs-12">
            @Html.DisplayFor(modelItem => item.Description)
            <br />
            @Html.ActionLink("Läs mer", "Details", new { id = item.Id })

            @if (User.IsInRole("Teacher"))
            {
                <span>|</span> @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) <span>|</span>
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            }
        </div>

        <div class="col-sm-3 hidden-xs" id="deltagarlista">
            <div class="panel panel-info">
                <div class="panel-heading"><h4 class="panel-title">Deltagare:</h4></div>
                <div class="panel-body">
                    @foreach (var attendingStudent in item.AttendingStudents)
                    {
                        @attendingStudent.FullName
                        <br />
                    }
                    @Html.ActionLink("Ny elev", "Register", "Account", new { id = item.Id }, null)
                </div>
            </div>
        </div>

    </div>
    <hr class="container-fluid" />
}


@if (User.IsInRole("Teacher"))
{
    <div class="container-fluid">
        <div class="col-md-12">
            <p>
                @Html.ActionLink("Skapa ny", "Create")
            </p>
        </div>
    </div>
}
