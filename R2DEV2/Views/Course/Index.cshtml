@model IEnumerable<R2DEV2.Models.Classes.CourseClass>

@{
    ViewBag.Title = "Kurser";
}

<style>
    h2, h4{
        margin-top: 0px;
        margin-bottom: 10px;
        color: black;
    }

    h2 > a {
        color: black;
    }

    h2 > a:hover {
        color: black;
        font-weight: bolder;
        text-decoration: none;
    }

    #btnAddStudent {
        font-size: 18px;
    }

    #btnAddStudent:hover {
        text-decoration: none;
        color: forestgreen;
    }

    .panel {
        min-height: 12em;
    }

    .panel-title {
        font-weight: bolder;
        font-size: 16px;
    }
</style>
@*@Html.ActionLink(  " ", "Delete",  "Grocery", new { @onclick = "return confirm('Are you sure you want to delete this Grocery');",  @class = "glyphicon glyphicon-trash" })*@

<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home"></div>

    <div class="tab-pane fade" id="NyLärare">
        Skapa ny Lärare
        <hr class="container-fluid" />
    </div>

    <div class="tab-pane fade" id="NyElev">
        Skapa ny Elev
        <hr class="container-fluid" />
    </div>

    <div class="tab-pane fade" id="NyKurs">
        <div class="container-fluid">
            @if (User.IsInRole("Teacher"))
            {
                <div class="col-md-12">
                    <p>
                        @Html.ActionLink("Skapa ny kurs", "Create")
                    </p>
                </div>
            }
        </div>
        <hr class="container-fluid" />
    </div>
</div>

@foreach (var item in Model)
{
    <div class="container-fluid">
        <div class="col-md-9">
            <h2 style="display: inline-block;">
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </h2>
            <h2 class="hidden-xs" style="float:right; display: inline-block;">
                <small style="text-align:right;">
                    @Html.DisplayFor(modelItem => item.StartTime) till
                    @Html.DisplayFor(modelItem => item.EndTime)
                </small>
            </h2>
        </div>

        <div class="rowequal">
            <div class="col-sm-9 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            Information
                        </h4>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                </div>
            </div>
            <div class="col-sm-3 hidden-xs" id="deltagarlista">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title" style="display:inline">
                            Deltagare:
                        </h4>
                        @if (User.IsInRole("Teacher"))
                        {
                            <h4 class="panel-title" style="display: inline; float: right;">
                                <a id="btnAddStudent" class="glyphicon glyphicon-plus-sign" href="@Url.Action("Register", "Account", new { id = item.Id })"></a>
                            </h4>
                        }
                    </div>
                    <div class="panel-body">
                        @foreach (var attendingStudent in item.AttendingStudents)
                        {
                            @attendingStudent.FullName
                            <br />
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            @*@Html.ActionLink("Läs mer", "Details", new { id = item.Id })*@

            @if (User.IsInRole("Teacher"))
            {
                @*<span>|</span>*@ @Html.ActionLink("Ändra", "Edit", new { id = item.Id })<i class="glyphicon glyphicon-pencil" style="color:forestgreen"></i><span>|</span>
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })<i class="glyphicon glyphicon-remove" style="color:darkred"></i>
            }
        </div>
    </div>
    <hr class="container-fluid" />
}