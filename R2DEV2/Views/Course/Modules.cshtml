@model IEnumerable<R2DEV2.Models.ModuleClass>

@{
    ViewBag.Title = "Index";
}

<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        @foreach (var item in Model)
        {
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#ITEMnamn">@Html.DisplayFor(modelItem => item.ModuleName)</a>
                </h4>
            </div>
            <div id="ITEMnamn" class="panel-collapse collapse in">
                <div class="panel-body">
                    @Html.DisplayFor(modelItem => item.ModuleDescription)
                    <br />
                    @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
                </div>
            </div>
        }
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#SkapaModul">Skapa Ny Modul</a>
            </h4>
        </div>
        <div id="SkapaModul" class="panel-collapse collapse in">
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Skapa ny", "Create")
                </p>
            </div>
        </div>
    </div>
</div>
