<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - R2DEV2</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <style>
        html {
            background-color: #e7e7e7;
        }

        body {
            padding-bottom: 0px;
        }

        #content {
            min-height: 45em;
            background-color: white;
        }

        #access {
            font-size: 30px;
            color: white;
            padding: 0px;
            margin: 0px;
            border: 0px;
            font-weight: bolder;
        }

        #adminPanel {
            background-color: #e7e7e7;
            margin-top: -5px;
            margin-bottom: 21px;
            min-height: 43px;
        }

        .navbar-brand {
            background-color: rgb(214, 0, 0);
            color: white;
            font-weight: bolder;
            font-size: 28px;
        }

        ul {
            margin-top: 2px;
        }

        footer {
            background-color: #e7e7e7;
            min-height: 8em;
        }
    </style>

    <div class="navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LEXICON", "Index", "Course", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div id="adminPanel" class="container-fluid">
        @if (User.IsInRole("Teacher"))
        {
            <div class="container">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#home" data-toggle="tab" aria-expanded="true">Hem</a></li>
                    <li>@Html.ActionLink("Ny kurs", "Create", "Course")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Lägg till<span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Lärare", "Register", "Account")</li>
                            <li><a href="#NyElev" data-toggle="tab">Elev</a></li>
                        </ul>
                    </li>
                    <li class="disabled"><a>Sök</a></li>
                </ul>
            </div>
        }
    </div>
    
    <div id="content" class="container">
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="home"></div>

            <div class="tab-pane fade" id="NyLärare">
                Skapa ny Lärare
                <hr class="container-fluid" />
            </div>

            <div class="tab-pane fade" id="NyElev">
                Skapa ny Elev
                <hr class="container-fluid" />
            </div>

            <div class="tab-pane fade" id="NyKurs">
                <p>
                    Här ska vi kunna skapa en kurs
                    
                </p>
                <hr class="container-fluid" />
            </div>
        </div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - R2DEV2</p>
        </div>
    </footer>
</body>
</html>
