<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - R2DEV2</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <style>
        #adminPanel {
            background-color: #e7e7e7;
            margin-top: -5px;
        }

        .navbar-brand {
            background-color: rgb(214, 0, 0);
            color: white;
            font-weight: bolder;
            font-size: 28px;
        }
    </style>

    <div class="navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("LEXICON", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <div id="adminPanel" class="container-fluid">
        <div class="container">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab" aria-expanded="true">Hem</a></li>
                <li class=""><a href="#profile" data-toggle="tab" aria-expanded="false">Profil</a></li>
                <li class="disabled"><a>Schema</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Skapa <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#dropdown1" data-toggle="tab">Lärare</a></li>
                        <li><a href="#dropdown2" data-toggle="tab">Elev</a></li>
                        <li><a href="#dropdown3" data-toggle="tab">Kurs</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>

    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="home">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
        <div class="tab-pane fade" id="profile">
            <div class="container body-content">
                @RenderPage("~/Views/Home/About.cshtml")
            </div>
        </div>
        <div class="tab-pane fade" id="dropdown1"> <!--Lärare-->
            <div class="container body-content">
                
            </div>
        </div>
        <div class="tab-pane fade" id="dropdown2"> <!--Elev-->
            <div class="container body-content">
                @RenderPage("~/Views/Home/Contact.cshtml")
            </div>
        </div>
        <div class="tab-pane fade" id="dropdown3"> <!--Kurs-->
            <div class="container body-content">
                @RenderPage("~/Views/Home/About.cshtml")
            </div>
        </div>
    </div>

    <hr class="container-fluid" />
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - R2DEV2</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
